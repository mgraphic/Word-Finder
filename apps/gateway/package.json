{
    "name": "word-finder-gateway",
    "version": "1.0.0",
    "main": "src/index.ts",
    "type": "module",
    "engines": {
        "node": ">=18.20.3"
    },
    "scripts": {
        "start": "nodemon -e ts -w ./src -x npm run watch:serve",
        "watch:serve": "node --loader ts-node/esm src/index.ts",
        "prod": "node build/index.cjs",
        "build": "npm run build:webpack",
        "build:webpack": "NODE_ENV=production webpack",
        "public": "npm run public:clean && npm run public:copy",
        "public:clean": "rm -rf ./public/*",
        "public:copy": "cp -r ../../ui-dist/browser/ ./public",
        "docker:build": "npm run public && docker build -t word-list-gateway ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.2",
        "nodemon": "^3.1.3",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2"
    }
}
